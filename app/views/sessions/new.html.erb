<% provide(:title, 'Log In') %>
<!-- Log In Page -->

        <div class="col-md-4 col-md-offset-1 well">
          <img src="background_login_page.jpg" id="background_log_in" alt="">
          <%= form_for(:session, url: login_path) do |f| %> <!-- Mind the path you put
                                                                for the form_for path-->
            <%= f.email_field :email,:placeholder => "Email", class: 'form-control' %><br >
            <%= f.password_field :password, :placeholder => "Password", class: 'form-control' %><br>
            <%= f.submit "Log In", class: "btn btn-primary" %>
            <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
            <% end %>

          <% end %>



          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>

  </div>
</div>
